    play :D, amp: 3
    sleep 0.5
    play :D, amp: 3
    sleep 1.5
    play :D, amp: 3
    sleep 0.5
    play :C, amp: 3
    sleep 1
    play :Bb3, amp: 3
    sleep 0.5
    play :F3, amp: 3
    sleep 2
    play :Bb3, amp: 3
    sleep 0.5
    play :D, amp: 3
    sleep 1
    play :D, amp: 3
    sleep 1
    play :C, amp: 3
    sleep 0.5
    play :Bb3, amp: 3
    sleep 1
    play :C, amp: 3
    sleep 5
    play :Bb3, amp: 3
    sleep 0.5
    play :Eb, amp: 3
    sleep 1
    play :Eb, amp: 3
    sleep 1
    play :Eb, amp: 3
    sleep 0.5
    play :D, amp: 3
    sleep 1
    play :C, amp: 3
    sleep 1
    play :Bb3, amp: 3
    sleep 2
    play :Bb3, amp: 3
    sleep 0.5
    play :D, amp: 3
    sleep 1
    play :D, amp: 3
    sleep 0.5
    play :C, amp: 3
    sleep 1
